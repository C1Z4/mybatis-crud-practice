<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="rentcar.mapper.MemberMapperKSE">
    <!-- MemberDTO ResultMap -->
    <resultMap id="memberResultMap" type="rentcar.model.dto.MemberDTO_rjw">
        <id property="memberCode" column="MEMBER_CODE"/>
        <result property="memberName" column="MEMBER_NAME"/>
        <result property="phone" column="PHONE"/>
        <result property="level" column="LEVEL"/>
    </resultMap>

    <!-- MemberAndLevelDTOKSE ResultMap-->
    <resultMap id="memberAndLevelResultMap" type="rentcar.model.dto.MemberAndLevelDTOKSE">
        <id property="memberCode" column="MEMBER_CODE"/>
        <result property="memberName" column="MEMBER_NAME"/>
        <result property="phone" column="PHONE"/>
        <association property="level" resultMap="levelResultMap"/>
    </resultMap>

    <!-- LevelDTO ResultMap-->
    <resultMap id="levelResultMap" type="rentcar.model.dto.LevelDTO">
        <id property="level" column="LEVEL"/>
        <result property="discountRate" column="DISCOUNT_RATE"/>
    </resultMap>

    <!-- 회원 전체 조회 -->
    <select id="selectAllMember" resultMap="memberAndLevelResultMap">
        SELECT
            A.MEMBER_CODE,
            A.MEMBER_NAME,
            A.PHONE,
            B.LEVEL,
            B.DISCOUNT_RATE
        FROM
            TBL_MEMBER A
        LEFT JOIN TBL_LEVEL B USING (LEVEL)
    </select>

    <!-- 아이디별 회원 조회 -->
    <select id="selectMemberById" resultMap="memberAndLevelResultMap" parameterType="_int">
        SELECT
            A.MEMBER_CODE,
            A.MEMBER_NAME,
            A.PHONE,
            B.LEVEL,
            B.DISCOUNT_RATE
        FROM
            TBL_MEMBER A
        LEFT JOIN TBL_LEVEL B USING (LEVEL)
        WHERE A.MEMBER_CODE = #{ memberCode }
    </select>

    <!-- 회원 등록 -->
    <insert id="registMapper" parameterType="rentcar.model.dto.MemberDTO_rjw">
        INSERT INTO TBL_MEMBER
        (
            MEMBER_NAME,
            PHONE,
            LEVEL
        )
        VALUES
        (
            #{ memberName },
            #{ phone },
            #{ level }
        )
    </insert>

    <update id="modifyMember" parameterType="rentcar.model.dto.MemberDTO_rjw">
        UPDATE TBL_MEMBER
        <set>
            <if test="memberName != null and memberName != ''">
                MEMBER_NAME = #{ memberName },
            </if>
            <if test="phone != null and phone != ''">
                PHONE = #{ phone },
            </if>
            <if test="level != null and level != ''">
                LEVEL = #{ level },
            </if>
        </set>
        WHERE MEMBER_CODE = #{ memberCode }
    </update>

    <delete id="removeMember" parameterType="string">
        DELETE FROM TBL_MEMBER
        WHERE MEMBER_CODE = #{ memberCode }
    </delete>

</mapper>